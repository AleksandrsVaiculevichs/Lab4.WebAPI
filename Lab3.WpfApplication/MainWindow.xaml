<Window x:Class="Lab3.WpfApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab3.WpfApplication"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        xmlns:viewModels="clr-namespace:Lab3.WpfApplication.ViewModels"
        xmlns:viewModel1="clr-namespace:Lab3.WpfApplication.ViewModels">
    <Window.DataContext>
        <viewModels:MainWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <Label>Uzvards</Label>
                <TextBox x:Name="TbxSearchSurname" Width="200" Text="{Binding Path=SearchSurname, UpdateSourceTrigger=PropertyChanged}"/>
                <Button x:Name="BtnSearch" Command="{Binding Path=SearchCommand}">Search</Button>
                <Button x:Name="BtnDelete" Command="{Binding Path=DeleteCommand}">Delete</Button>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,5,0,5">
                <Label>Kategorija</Label>
                <ComboBox Width="200"
              ItemsSource="{Binding Categories}"
              SelectedItem="{Binding SelectedCategory}" />
            </StackPanel>
            <DataGrid AutoGenerateColumns="False" Grid.Row="1" Grid.ColumnSpan="4"
          x:Name="LstProdukts"
          d:ItemsSource="{d:SampleData ItemCount=5}"
          ItemsSource="{Binding Path=Products, Mode=OneWay}"
          SelectionMode="Single"
          CanUserAddRows="False"
          IsReadOnly="True"
          SelectedItem="{Binding Path=SelectedProduct, Mode=TwoWay}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Produkta Nosaukums" Width="100" Binding="{Binding Path = ProductName}" />
                    <DataGridTextColumn Header="Produkta Cena" Width="100" Binding="{Binding Path=ProductPrice}" />
                    <DataGridTextColumn Header="Produkta Kategorija" Width="150" Binding="{Binding Path=ProductCategory}" />
                </DataGrid.Columns>
            </DataGrid>
            <Label>Pircejs</Label>
            <StackPanel Orientation="Horizontal" Margin="10"
            DataContext="{Binding EditPircejs}">

                <Label Content="Vārds:"/>
                <TextBox Width="150" Margin="5,0"
             Text="{Binding Name}"/>

                <Label Content="Uzvārds:"/>
                <TextBox Width="150" Margin="5,0"
             Text="{Binding Surname}"/>

                <Button Content="Update" Width="100" Margin="10,0"
            Command="{Binding DataContext.SavePircejsCommand,
                      RelativeSource={RelativeSource AncestorType=Window}}"/>
            </StackPanel>

            <DataGrid AutoGenerateColumns="False" Grid.Row="1" Grid.ColumnSpan="4"
                      x:Name="LstPircejs"
                      d:ItemsSource="{d:SampleData ItemCount=5}"
                      ItemsSource="{Binding Path=Pirceji,Mode=OneWay}"
                      SelectionMode="Single"
                      CanUserAddRows="False"
                      IsReadOnly="True"
                      SelectedItem="{Binding SelectedPircejs, Mode=TwoWay}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Klienta vards" Width="150" Binding="{Binding Path = Name}" />
                    <DataGridTextColumn Header="Klienta uzvards " Width="150" Binding="{Binding Path=Surname}" />
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Window>
